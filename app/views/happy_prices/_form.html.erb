  <%= form_with(model: [@business, @item, @happy_price], local: true, method: method, class: "col-lg-6") do |form| %>

  <!-- ERRORS !-->
  <% if @happy_price.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <p> Le produit n'a pas pu être créé pour les raisons suivantes :</p>
      <ul>
        <% @happy_price.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- price !-->
  <div class="form-group">
    <%= form.label :price, 'Prix' %>
    <%= form.number_field :price, step: 0.01, min: 0.01, class: "form-control text-primary"  %>
  </div>

  <!-- quantity !-->
  <div class="form-group">
    <%= form.label :quantity, 'Quantité' %>
    <%= form.number_field :quantity, step: 1, min:1 , class: "form-control text-primary"  %>
  </div>

  <!-- start and end dates !-->
  <div class="form-group">
    <%= form.datetime_select  :start_date, class: "form-control"  %>
    <%= form.label :start_date, 'Début' %>
  </div>
  <div class="form-group">
    <%= form.datetime_select  :end_date, class: "form-control"  %>
    <%= form.label :end_date, 'Fin' %>
  </div>

  <!-- SUBMIT !-->
  <div class="actions mt-5">
    <%= form.submit "Valider", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <div class="row justify-content-center">
    <%= link_to "Retour au produit", business_item_path(@business, @item), class: "btn btn-info" %>
  </div>

<% end %>
