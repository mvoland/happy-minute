<% happy_price = item.current_happy_price %>

<!-- ( Item Wrapper -->
<div class="col-lg-8 col-md-6 col-sm-6 col-xs-12 blog-item">

  <% if happy_price %>
    <!-- ( Happy Minute Begin !-->
    <div class="alert alert-success">
      <p class="display-4"> HAPPY MINUTE : <%= happy_price.price %> € </p>

      <p> Temps restant : <%= happy_price.time.in_minutes %> minutes ! </p>
      <p> Quantité restante : seulement <%= happy_price.stock %> ! </p>
      <!-- Happy Minute Begin ) !-->
    <% end %>

    <div class="blog-item-wrapper wow fadeInUp" data-wow-delay="0.9s">
      <div class="blog-item-text">
        <div class="row">
          <div class="col-4">
            <h3>
              <%= link_to item.title, business_item_path(@business, item) %>
            </h3>
            <div class="meta-tags">
              <span class="foodcategory"><i class="lnr lnr-cloud"></i> <%= item.category %> </span><br>
            </div>
          </div>
          <div class="col-6">
            <p>
              <%= item.description %>
            </p>
          </div>
          <div class="col-2">
            <p>
              <% if happy_price %>
                <del><%= item.price %> € </del>
              <% else %>
                <%= item.price %> €
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <% if current_owner == item.business.owner && !item.upcoming_happy_prices.empty? %>
        <p class="p-2"> <%= item.upcoming_happy_prices.size %> Happy Minutes à venir sur ce produit</p>
      <% end %>
    </div>
    <% if happy_price %>
      <!-- ( Happy Minute End !-->
    </div>
    <!-- Happy Minute End ) -->
  <% end %>
</div>
<!-- Item Wrapper ) -->
