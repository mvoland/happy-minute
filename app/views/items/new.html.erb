<div class="container">

  <h2> Créez un nouveau produit ! </h2>

  <%= form_with(model: [@business, @item], local: true) do |form| %>

    <!-- ERRORS !-->
    <% if @item.errors.any? %>
      <div class="alert alert-warning" role="alert">
        <p> Le produit n'a pas pu être créé pour les raisons suivantes :</p>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- title !-->
    <div class="form-group row">
      <div class="col-lg-3"> <%= form.label :title, 'Titre' %> </div>
      <div class="col-lg-9">
        <%= form.text_field :title, class: "form-control text-primary"  %>
      </div>
    </div>

    <!-- description !-->
    <div class="form-group row">
      <div class="col-lg-3"> <%= form.label :description, 'Description' %> </div>
      <div class="col-lg-9">
        <%= form.text_area :description, class: "form-control text-primary"  %>
      </div>
    </div>

    <!-- price !-->
    <div class="form-group row">
      <div class="col-lg-3"> <%= form.label :price, 'Prix' %> </div>
      <div class="col-lg-9">
        <%= form.number_field :price,step: 0.01, class: "form-control text-primary"  %>
      </div>
    </div>

    <!-- category !-->
    <div class="form-group row">
      <div class="col-lg-3"> <%= form.label :category, 'Catégorie' %> </div>
      <div class="col-lg-9">
        <%= form.text_area :category, class: "form-control text-primary"  %>
      </div>
    </div>

    <!-- SUBMIT !-->
    <div class="actions mt-5">
      <%= form.submit "Créer le produit", class: "btn btn-lg btn-primary btn-block" %>
    </div>

  <% end %>
</div>

</div>
