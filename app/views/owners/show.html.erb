<div id="title" class="row justify-content-center">
  <div class="section-header mt-4 col-4">
    <h2 class="section-title wow fadeIn" data-wow-duration="1000ms" data-wow-delay="0.3s">Vos <span>informations</span></h2>
  </div>
  <div class="section-header mt-4 col-8">
    <h2 class="section-title wow fadeIn" data-wow-duration="1000ms" data-wow-delay="0.3s">Vos <span>établissements</span></h2>
    <hr class="lines wow zoomIn" data-wow-delay="0.3s">
  </div>
</div>

<div id="body" class="row justify-content-center">

  <div class="row justify-content-center col-4">
    <% if owner_signed_in? %>
      <ul>
        <li class="card-title profile-owner" style=""><%= @owner.first_name %></li>
        <li class="card-title profile-owner"><%= @owner.last_name%></li>
        <li class="card-title profile-owner"><%= @owner.email %></li>
      </ul>
    <%end%>
    <div class="row justify-content-center mb-4 col-4">
      <p class="section-subtitle wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="0.3s">
        <%= link_to "Editer votre profil", edit_owner_registration_path, :class => "btn btn-common my-2" %>  </p>
    </div>
  </div>
  <div class="row justify-content-center text-center col-8">
    <% @owner.businesses.each do |business| %>
      <div class="col-lg-4 col-md-6 col-sm-12 py-4 blog-item">
        <%= link_to business_path(business.id) do %>
          <div class="blog-item-img">
            <%if business.business_photo.attached?%>
              <%= image_tag business.business_photo, alt: 'photo', :class => "root-card-image" %>
            <% else %>
              <%= image_tag 'burger.png', :class => "root-card-image" %>
            <% end %>
          </div>
          <p>
            <%= link_to "#{business.name}", business_path(business.id), :class => "btn btn-common my-2" %>
          </p>
        <%end%>
      </div>
    <%end%>
  </div>

</div>

<div id="buttons" class="row justify-content-center">
  <div class="row justify-content-center mb-4 col-4">
    <p class="section-subtitle wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="0.3s">
      <%= link_to "Editer votre profil", edit_owner_registration_path, :class => "btn btn-common my-2" %>  </p>
  </div>

  <div class="row justify-content-center mt-4 col-8">
    <p class="section-subtitle wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="0.3s">
      <%= link_to "Créer un nouvel établissement", new_business_path, :class => "btn  btn-common my-2" %>
    </p>
  </div>

</div>

</div>
